@model DTO.DTOEntity.OrderCardDTO

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Kart sifarişi</h5>
                </div>
                <div class="ibox-content">
                    <form method="post">
                        <div class="form-group  row">
                            <label class="col-sm-1 col-form-label">Ad</label>
                            <div class="col-sm-3"><input type="text" asp-for="Name" maxlength="20" class="form-control"></div>
                            <label class="col-sm-1 col-form-label">Soyad</label>
                            <div class="col-sm-3"><input type="text" asp-for="Surname" maxlength="20" class="form-control"></div>
                            <label class="col-sm-1 col-form-label">Ata adı</label>
                            <div class="col-sm-3"><input type="text" asp-for="FatherName" maxlength="25" class="form-control"></div>
                        </div>
                        <div class="form-group  row">
                            <label class="col-sm-1 col-form-label">Seriya</label>
                            <div class="col-sm-3"><input type="text" asp-for="Seriya" maxlength="3" class="form-control" /> </div>
                            <label class="col-sm-1 col-form-label">Seriya№</label>
                            <div class="col-sm-3"><input type="text" asp-for="SeriyaNo" maxlength="13" class="form-control" /> </div>
                            <label class="col-sm-1 col-form-label">Verilmə yeri</label>
                            <div class="col-sm-3"><input type="text" asp-for="VerilmeYeri" maxlength="30" class="form-control" /> </div>

                        </div>
                        <div class="form-group  row">
                            <label class="col-sm-1 col-form-label">Verilmə tarixi</label>
                            <div class="col-sm-3"><input type="date" asp-for="Verilmetarixi" class="form-control" /> </div>
                            <label class="col-sm-1 col-form-label">Fincode</label>
                            <div class="col-sm-3"><input type="text" asp-for="Fincode" maxlength="7" class="form-control" /> </div>
                            <label class="col-sm-1 col-form-label">Mobil nömrə</label>
                            <div class="col-sm-3"><input type="tel" asp-for="TelNumber" maxlength="10" class="form-control" /> </div>
                        </div>
                        <div class="form-group  row">
                            <label class="col-sm-1 col-form-label">Doğum tarixi</label>
                            <div class="col-sm-3"><input type="date" asp-for="Dogumtarixi" class="form-control" /> </div>
                            <label class="col-sm-1 col-form-label">Doğulduğu yer</label>
                            <div class="col-sm-3"><input type="text" asp-for="DogumYeri" maxlength="30" class="form-control" /> </div>
                            <label class="col-sm-1 col-form-label">Ana adı</label>
                            <div class="col-sm-3"><input type="text" asp-for="MotherName" maxlength="15" class="form-control" /> </div>

                        </div>
                        <div class="form-group  row">
                            <label class="col-sm-2 col-form-label">Faktiki ünvanı</label>
                            <div class="col-sm-6"><input type="text" asp-for="FatikiUnvan" maxlength="100" class="form-control"></div>
                            <label class="col-sm-1 col-form-label">Qızlıq soyadı(ana)</label>
                            <div class="col-sm-3"><input type="text" asp-for="MotherSurname" maxlength="20" class="form-control" /> </div>
                        </div>
                        <div class="form-group  row">
                            <label class="col-sm-2 col-form-label">İşlədiyi şirkət</label>
                            <div class="col-sm-6"><input type="text" asp-for="Company" maxlength="100" class="form-control"></div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group row">
                            <div class="col-sm-4 col-sm-offset-2">
                                <button asp-controller="Home" asp-action="Index" class="btn btn-white btn-sm" type="submit">İmtina</button>
                                <button   class="btn btn-primary btn-sm"  type="submit">Sifariş et</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


