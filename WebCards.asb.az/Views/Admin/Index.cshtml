@model IEnumerable<DTO.DTOEntity.UserDTO>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-content">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover dataTables-example">
                            <thead>
                                <tr>
                                    <th>Username</th>
                                    <th>Email</th>
                                    <th>Rolu</th>
                                    <th>Şirkət</th>
                                    <th>Yaradılma tarixi</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="gradeX">
                                        <td>@item.UserName</td>
                                        <td>@item.Email</td>

                                        @if (@item.RoleId == 1)
                                        {
                                            <td> Admin </td>
                                        }
                                        else
                                        {
                                            <td> Adi </td>
                                        }

                                        <td>@item.Company</td>
                                        <td>@(((DateTime)item.Create).ToString("dd-MM-yyyy"))</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



